/* ---------------------------------
 *        Admonition Tag
 * --------------------------------- */
 details.admonition
    position: relative
    margin: 1.5625em 0
    padding: 0 1.2rem
    overflow: auto
    font-size: 0.9rem
    box-shadow: 0 4px 10px rgba(0,0,0,0.05), 0 0 1px rgba(0,0,0,0.1)
    &[open]>summary:after
        transform: rotate(180deg)
    &.note
        border-left: .3rem solid #448aff
        summary
            background-color: rgba(68,138,255,.1)
            &:before
                content: "\E3C9"
                color: #448aff
    &.abstract
        border-left: .3rem solid #00b0ff
        summary
            background-color: rgba(0,176,255,.1)
            &:before
                content: ""
                color: #00b0ff
    &.info
        border-left: .3rem solid #00b8d4
        summary
            background-color: rgba(0,184,212,.1)
            &:before
                content: ""
                color: #00b8d4
    &.tip
        border-left: .3rem solid #00bfa5
        summary
            background-color: rgba(0,191,165,.1)
            &:before
                content: ""
                color: #00bfa5
    &.success
        border-left: .3rem solid #00c853
        summary
            background-color: rgba(0,200,83,.1)
            &:before
                content: ""
                color: #00c853
    &.question
        border-left: .3rem solid #64dd17
        summary
            background-color: rgba(100,221,23,.1)
            &:before
                content: ""
                color: #64dd17
    &.warning
        border-left: .3rem solid #ff9100
        summary
            background-color: rgba(255,145,0,.1)
            &:before
                content: ""
                color: #ff9100
    &.failure
        border-left: .3rem solid #ff5252
        summary
            background-color: rgba(255,82,82,.1)
            &:before
                content: ""
                color: #ff5252
    &.danger
        border-left: .3rem solid #ff1744
        summary
            background-color: rgba(255,23,68,.1)
            &:before
                content: ""
                color: #ff1744
    &.bug
        border-left: .3rem solid #f50057
        summary
            background-color: rgba(255,23,68,.1)
            &:before
                content: ""
                color: #f50057
    &.example
        border-left: .3rem solid #651fff
        summary
            background-color: rgba(101,31,255,.1)
            &:before
                content: ""
                color: #651fff
    &.quote
        border-left: .3rem solid #9e9e9e
        summary
            background-color: hsla(0,0%,62%,.1)
            &:before
                content: ""
                color: #9e9e9e
    summary
        margin: 0 -1.2rem
        padding: .8rem 1.2rem .8rem 3rem
        font-weight: 700
        outline: none
        cursor: pointer
        &::-webkit-details-marker
            display: none
        &:before
            content: " "
            font-family: Material Icons
            font-weight: 400
            font-size: 1.5rem
            line-height: 1
            position: absolute
            left: 1rem
            top: .7rem
        &:after
            content: "\E313"
            font-family: Material Icons
            font-weight: 400
            font-size: 1.5rem
            color: rgba(0,0,0,.26)
            line-height: 1
            position: absolute
            top: .7rem
            right: 1rem
